<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.telefonica.first.tresenraya.RankingActivity"
    android:background="@drawable/azul"
    tools:showIn="@layout/activity_ranking">

    <TextView
        android:isScrollContainer="true"
        android:id="@+id/ranking"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:text=""
        android:hint=""
        android:textSize="26dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.033" />


    <EditText
        android:id="@+id/nickPartidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Introduce nick"
        android:inputType="text"
        android:maxLength="8"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text=""
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:onClick="cargar2"
        app:srcCompat="@drawable/recuperar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="424dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/lista"
        />

</android.support.constraint.ConstraintLayout>
